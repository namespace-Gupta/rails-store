<section class="hero is-success is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title has-text-black">Sign Up</h3>
                <hr class="login-hr">
                <div class="box">
        <%= form_for(:user, :url => registration_path(:user)) do |f| %>
        <div class="field">
            <div class="control">
                <%= f.text_field :name, class: "input is-large", placeholder: "Your Name" %>
            </div>
        </div>

        <div class="field">
            <div class="control">
            <%= f.text_field :email, class: "input is-large" ,placeholder: "Your Email" %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.password_field :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { autocomplete: "new-password" },
              class: "input is-large",
              placeholder: "Password" %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.password_field :password_confirmation,
            required: true,
            input_html: { autocomplete: "new-password" },
            class: "input is-large",
            placeholder: "Type Password Again " %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.text_field :address, class: "input is-large", placeholder: "Your Address" %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.text_field :postal_code, class: "input is-large" , placeholder: "Postal Code" %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.text_field :city, class: "input is-large", placeholder: "City" %>
            </div>
        </div>
        <div class="field">
            <div class="control">
            <%= f.text_field :province, class: "input is-large" , placeholder: "Province" %>
            </div>
        </div>
        <%= f.submit 'Sign up', class: "button is-block is-info is-large is-fullwidth"  %>

        <% end %>
</div>
</div>
</div>
</div>
</section>

<style>

.hero.is-success {
  background: #F2F6FA;
}
.hero .nav, .hero.is-success .nav {
  -webkit-box-shadow: none;
  box-shadow: none;
}
.box {
  margin-top: 5rem;
}
.avatar {
  margin-top: -70px;
  padding-bottom: 20px;
}
.avatar img {
  padding: 5px;
  background: #fff;
  border-radius: 50%;
  -webkit-box-shadow: 0 2px 3px rgba(10,10,10,.1), 0 0 0 1px rgba(10,10,10,.1);
  box-shadow: 0 2px 3px rgba(10,10,10,.1), 0 0 0 1px rgba(10,10,10,.1);
}
input {
  font-weight: 300;
}
p {
  font-weight: 700;
}
p.subtitle {
  padding-top: 1rem;
}

.login-hr{
  border-bottom: 1px solid black;
}

.has-text-black{
  color: black;
}

.field{
  padding-bottom: 10px;
}

.fa{
  margin-left: 5px;
}
</style>


