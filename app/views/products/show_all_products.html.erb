<nav class="breadcrumb" aria-label="breadcrumbs" style="position:relative">
    <ul>
      <li> <%= link_to "Home", root_path, class: "subtitle is-3" %> </li>
      <li><%= link_to "All Products", products_show_all_products_path, class: "is-active subtitle is-3" %></li>
    </ul>
  </nav>
<div class="box">

        <%= form_with(url: products_show_all_products_path, method: "get",class: "field has-addons", local: true) do %>
            <%= text_field_tag(:query,"", class: "input has-text-centered control is-expanded", placeholder: "Product Name....") %>
            <%= select_tag "category_id",options_from_collection_for_select(Category.all, "id", "title", '179'),class: "select control", html: {selected: true} %>
            <%= submit_tag "Search" , class: "button is-info control" %>
        <% end %>
</div>
<h1 class="title is-1">New Products</h1>
<div class="columns is-multiline">
  <%= render partial: "product", collection: @new_prod %>
</div>

<h1 class="title is-1">Recently Updated</h1>
<div class="columns is-multiline">
  <%= render partial: "product", collection: @recent_updates %>
</div>

<h1 class="title is-1">All Products</h1>
<div class="columns is-multiline">
  <%= render partial: "product", collection: @all_products %>
</div>
<div class="d-inline-block">
  <%= paginate @all_products, window: 2 %>
</div>